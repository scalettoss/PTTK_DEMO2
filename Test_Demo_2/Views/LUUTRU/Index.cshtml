﻿@model IEnumerable<Test_Demo_2.Models.LUU_TRU>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h2 class="text-info mb-3">DANH SÁCH LƯU TRỮ</h2>
<p><a href="@Url.Action("Create","LUUTRU")" class="btn btn-primary">Thêm mới</a></p>
<table class="table">
    <tr>
        <th>
            <lable>Mã cửa hàng</lable>
        </th>
        <th>
            <lable>Mã mặt hàng</lable>
        </th>
        <th>
            <lable>Số lượng</lable>
        </th>
        <th>
            <lable>Chức năng</lable>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MA_CUA_HANG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MA_MAT_HANG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SO_LUONG_MAT_HANG)
            </td>
            <td>
                <a href="@Url.Action("Edit","LUUTRU", new {  mach = item.MA_CUA_HANG, mamh = item.MA_MAT_HANG })" class="btn-sm btn-info">Edit</a> |
                <a href="@Url.Action("Details","LUUTRU", new { mach = item.MA_CUA_HANG, mamh = item.MA_MAT_HANG })" class="btn-sm btn-warning">Details</a> |
                <a href="@Url.Action("Delete","LUUTRU", new { mach = item.MA_CUA_HANG, mamh = item.MA_MAT_HANG })" class="btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>