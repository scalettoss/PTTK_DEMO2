﻿@model IEnumerable<Test_Demo_2.Models.CUA_HANG>

@{
    ViewBag.Title = "Quản lí cửa hàng";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}


<h2 class="text-info mb-3">DANH SÁCH CỬA HÀNG</h2>
<p><a href="@Url.Action("Create","CUAHANG")" class="btn btn-primary">Thêm mới</a></p>
<table class="table">
    <tr>
        <th>
            <lable>Mã cửa hàng</lable>
        </th>
        <th>
            <lable>Địa chỉ</lable>
        </th>
        <th>
            <lable>Số điện thoại</lable>
        </th>
        <th>
            <lable>Chức năng</lable>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MA_CUA_HANG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DIA_CHI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SO_DIEN_THOAI)
            </td>
            <td>
                <a href="@Url.Action("Edit","CUAHANG", new { id = item.MA_CUA_HANG })" class="btn-sm btn-info">Edit</a> |
                <a href="@Url.Action("Details","CUAHANG", new { id = item.MA_CUA_HANG })" class="btn-sm btn-warning">Details</a> |
                <a href="@Url.Action("Delete","CUAHANG", new { id = item.MA_CUA_HANG })" class="btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }

</table>